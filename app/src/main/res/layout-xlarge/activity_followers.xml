<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/boxbg">

            <Button
                android:id="@+id/Templar"
                android:layout_width="121dp"
                android:layout_height="125dp"
                android:background="@drawable/templar" />

            <TextView
                android:id="@+id/nombreTemplar"
                android:layout_width="190dp"
                android:layout_height="77dp"
                android:text="@string/followerTemplar"
                android:textColor="@color/colorWhite"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/boxbg">

            <Button
                android:id="@+id/Canalla"
                android:layout_width="121dp"
                android:layout_height="125dp"
                android:background="@drawable/scoundrel" />

            <TextView
                android:id="@+id/nombreCanalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/followerScoundrel"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/boxbg">

            <Button
                android:id="@+id/Magic"
                android:layout_width="121dp"
                android:layout_height="125dp"
                android:background="@drawable/enchantress" />

            <TextView
                android:id="@+id/nombreMagic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/followerEnchantress"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

